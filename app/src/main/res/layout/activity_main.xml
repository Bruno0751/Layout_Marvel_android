        <TextView
            android:id="@+id/textViewHulk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_view_hulk"
            app:layout_constraintEnd_toEndOf="@+id/imageViewHulk"
            app:layout_constraintStart_toStartOf="@+id/imageViewHulk"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHulk" />

        <ImageView
